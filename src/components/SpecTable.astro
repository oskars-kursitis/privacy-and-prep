---
const { specs = {} } = Astro.props;
---
<table class="w-full text-sm border rounded-lg overflow-hidden">
  <tbody>
    {Object.entries(specs).map(([k, v]) => (
      <tr class="even:bg-gray-50 dark:even:bg-gray-900">
        <td class="p-2 font-medium w-1/3">{k}</td>
        <td class="p-2">{v}</td>
      </tr>
    ))}
  </tbody>
</table>
